{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/backend/src",
  "tags": ["type:app", "scope:backend"],
  "targets": {
    "dev": {
      "executor": "@nx/webpack:webpack",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/backend",
        "main": "apps/backend/src/main.ts",
        "tsConfig": "apps/backend/tsconfig.json",
        "webpackConfig": "apps/backend/webpack.config.cjs",
        "deleteOutputPath": true,
        "externalDependencies": "all",
        "watch": true,
        "serve": true
      },
      "configurations": {
        "development": {
          "optimization": false,
          "outputHashing": "none",
          "sourceMap": true,
          "namedChunks": true,
          "aot": false,
          "extractLicenses": false,
          "vendorChunk": false,
          "buildOptimizer": false,
          "deleteOutputPath": true
        },
        "production": {
          "optimization": true,
          "outputHashing": "none",
          "sourceMap": false,
          "namedChunks": false,
          "aot": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "buildOptimizer": false,
          "deleteOutputPath": true
        }
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{workspaceRoot}/dist/apps/backend"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/backend",
        "main": "apps/backend/src/main.ts",
        "tsConfig": "apps/backend/tsconfig.json",
        "webpackConfig": "apps/backend/webpack.config.cjs",
        "deleteOutputPath": true,
        "externalDependencies": "all"
      },
      "configurations": {
        "development": {
          "optimization": false,
          "outputHashing": "none",
          "sourceMap": true,
          "namedChunks": true,
          "aot": false,
          "extractLicenses": false,
          "vendorChunk": false,
          "buildOptimizer": false
        },
        "production": {
          "optimization": true,
          "outputHashing": "none",
          "sourceMap": false,
          "namedChunks": false,
          "aot": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "buildOptimizer": false
        }
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/apps/backend/main.js"
      },
      "dependsOn": ["build"],
      "configurations": {
        "production": {
          "dependsOn": ["build:production"]
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/backend/src/**/*"]
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "apps/backend"
      }
    },
    "prune": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/backend", "{workspaceRoot}/dist/libs/shared-types"],
      "options": {
        "commands": [
          "rm -rf dist",
          "mkdir -p dist/apps/backend",
          "mkdir -p dist/libs/shared-types",
          "cp -r dist/apps/backend/* dist/apps/backend/",
          "cp -r libs/shared-types dist/libs/"
        ],
        "parallel": false
      },
      "dependsOn": ["build"]
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f apps/backend/Dockerfile -t apps-backend .",
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": ["build"]
    },
    "docker:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run -p 4000:4000 --env-file .env apps-backend"
      },
      "dependsOn": ["docker:build"]
    }
  }
}
