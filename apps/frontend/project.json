{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/frontend/src",
  "tags": ["type:app", "scope:frontend"],
  "targets": {
    "dev": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "frontend:build:development",
        "configFile": "apps/frontend/vite.config.ts",
        "projectRoot": "apps/frontend"
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{workspaceRoot}/dist/apps/frontend"],
      "options": {
        "outputPath": "dist/apps/frontend",
        "configFile": "apps/frontend/vite.config.ts",
        "projectRoot": "apps/frontend"
      },
      "defaultConfiguration": "development",
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "options": {
        "buildTarget": "frontend:build",
        "configFile": "apps/frontend/vite.config.ts",
        "projectRoot": "apps/frontend",
        "proxyConfig": "apps/frontend/proxy.conf.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/frontend/src/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "apps/frontend"
      }
    },
    "lingui:extract": {
      "executor": "nx:run-commands",
      "options": {
        "command": "lingui extract",
        "cwd": "apps/frontend"
      }
    },
    "lingui:compile": {
      "executor": "nx:run-commands",
      "options": {
        "command": "lingui compile",
        "cwd": "apps/frontend"
      }
    },
    "prune": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/frontend"],
      "options": {
        "commands": ["echo 'Frontend build already in dist/apps/frontend/'"],
        "parallel": false
      },
      "dependsOn": ["build"]
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f apps/frontend/Dockerfile -t apps-frontend .",
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": ["build"]
    },
    "docker:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run -p 80:80 apps-frontend"
      },
      "dependsOn": ["docker:build"]
    }
  }
}
