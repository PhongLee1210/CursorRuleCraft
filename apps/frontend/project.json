{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/frontend/src",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite",
        "cwd": "apps/frontend"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/frontend"],
      "options": {
        "command": "tsc && vite build",
        "cwd": "apps/frontend"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite preview",
        "cwd": "apps/frontend"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/frontend/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "apps/frontend"
      }
    },
    "lingui:extract": {
      "executor": "nx:run-commands",
      "options": {
        "command": "lingui extract",
        "cwd": "apps/frontend"
      }
    },
    "lingui:compile": {
      "executor": "nx:run-commands",
      "options": {
        "command": "lingui compile",
        "cwd": "apps/frontend"
      }
    },
    "prune": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/frontend"],
      "options": {
        "commands": ["echo 'Frontend build already in dist/apps/frontend/'"],
        "parallel": false
      },
      "dependsOn": ["build"]
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f apps/frontend/Dockerfile -t apps-frontend .",
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": ["build"]
    },
    "docker:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run -p 80:80 apps-frontend"
      },
      "dependsOn": ["docker:build"]
    }
  },
  "tags": ["type:app", "scope:frontend"]
}
