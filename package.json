{
  "name": "cursorrulecraft",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "nx run frontend:dev",
    "dev:frontend": "nx run frontend:dev",
    "dev:backend": "nx run backend:dev",
    "dev:all": "nx run-many -t dev --parallel=2 --projects=frontend,backend",
    "build": "nx run-many -t build",
    "build:frontend": "nx run frontend:build",
    "build:backend": "nx run backend:build",
    "preview": "nx run frontend:preview",
    "lint": "nx run-many -t lint",
    "format": "prettier --write \"**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,css,json}\"",
    "type-check": "nx run-many -t type-check",
    "lingui:extract": "nx run frontend:lingui:extract",
    "lingui:compile": "nx run frontend:lingui:compile",
    "test": "nx run-many -t test",
    "graph": "nx graph",
    "affected": "nx affected",
    "clean": "nx reset && rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "supabase:reset": "supabase db reset",
    "supabase:studio": "open http://127.0.0.1:54323",
    "docker:dev": "./scripts/docker-dev.sh",
    "docker:prod": "./scripts/docker-prod.sh up",
    "docker:build": "docker-compose --env-file .env.docker build",
    "docker:up": "docker-compose --env-file .env.docker up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "setup": "bun install && echo '\n⚠️  Next step: Install Supabase CLI if you haven''t already:\n   macOS: brew install supabase/tap/supabase\n   npm:   npm install -g supabase\n\nThen run: supabase start\nCopy the credentials to .env file, and run: bun run dev:all'"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@lingui/cli": "^5.5.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.8",
    "@nx/docker": "21.6.4",
    "@nx/js": "^21.6.4",
    "@nx/nest": "^21.6.4",
    "@nx/vite": "^21.6.4",
    "@nx/workspace": "^21.6.4",
    "@types/bun": "latest",
    "@types/express": "^5.0.3",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "10.4.21",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.4.0",
    "madge": "^8.0.0",
    "nx": "^21.6.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "run-script-webpack-plugin": "^0.2.3",
    "tailwindcss": "3.4.0",
    "ts-loader": "^9.5.4",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "webpack": "^5.102.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@lingui/core": "^5.5.1",
    "@lingui/detect-locale": "^5.5.1",
    "@lingui/macro": "^5.5.1",
    "@lingui/react": "^5.5.1",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/terminus": "^11.0.0"
  }
}
