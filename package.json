{
  "name": "cursorrulecraft",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "nx dev frontend",
    "dev:frontend": "nx dev frontend",
    "dev:backend": "nx dev backend",
    "dev:all": "nx run-many --targets=dev --parallel=2",
    "build": "nx run-many --targets=build",
    "build:frontend": "nx build frontend",
    "build:backend": "nx build backend",
    "preview": "nx preview frontend",
    "lint": "nx run-many --targets=lint",
    "format": "prettier --write \"**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,css,json}\"",
    "type-check": "nx run-many --targets=type-check",
    "lingui:extract": "nx lingui:extract frontend",
    "lingui:compile": "nx lingui:compile frontend",
    "test": "nx run-many --targets=test",
    "graph": "nx graph",
    "affected": "nx affected",
    "clean": "nx reset && rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "supabase:reset": "supabase db reset",
    "supabase:studio": "open http://127.0.0.1:54323",
    "docker:dev": "./scripts/docker-dev.sh",
    "docker:prod": "./scripts/docker-prod.sh up",
    "docker:build": "docker-compose --env-file .env.docker build",
    "docker:up": "docker-compose --env-file .env.docker up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "docker:test:build": "./scripts/test-docker-build.sh",
    "docker:test:render": "./scripts/test-render-deployment.sh",
    "docker:test:frontend": "docker build --build-arg VITE_API_URL=https://cursorrulecraft-api.onrender.com/api --build-arg VITE_CLERK_PUBLISHABLE_KEY=\"${VITE_CLERK_PUBLISHABLE_KEY}\" --build-arg PORT=4000 -f apps/frontend/Dockerfile -t cursorrulecraft-frontend:test .",
    "docker:test:backend": "docker build --target builder --build-arg NODE_ENV=production --build-arg PORT=4000 --build-arg HOST=0.0.0.0 -f apps/backend/Dockerfile -t cursorrulecraft-backend:test .",
    "docker:test:validate": "./scripts/validate-env.sh",
    "setup": "bun install && echo '\n⚠️  Next step: Install Supabase CLI if you haven''t already:\n   macOS: brew install supabase/tap/supabase\n   npm:   npm install -g supabase\n\nThen run: supabase start\nCopy the credentials to .env file, and run: bun run dev:all'"
  },
  "devDependencies": {
